{
	"name": "@smcllns/gmail",
	"version": "0.8.0",
	"description": "Minimal Gmail CLI with restricted scopes for Claude Code and other agents",
	"type": "module",
	"bin": {
		"gmail": "dist/cli.js"
	},
	"main": "./dist/gmail-service.js",
	"types": "./dist/gmail-service.d.ts",
	"exports": {
		".": {
			"types": "./dist/gmail-service.d.ts",
			"default": "./dist/gmail-service.js"
		},
		"./testing": {
			"types": "./dist/mock-gmail-service.d.ts",
			"default": "./dist/mock-gmail-service.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && chmod +x dist/cli.js",
		"check": "tsc --noEmit",
		"test": "bun test",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"google-auth-library": "^10.1.0",
		"googleapis": "^153.0.0"
	},
	"devDependencies": {
		"@types/node": "^22.10.1",
		"typescript": "^5.7.2"
	},
	"keywords": [
		"gmail",
		"email",
		"cli",
		"claude",
		"agent",
		"automation"
	],
	"author": "smcllns",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/smcllns/gmail.git"
	},
	"homepage": "https://github.com/smcllns/gmail#readme",
	"engines": {
		"node": ">=20.0.0"
	}
}
